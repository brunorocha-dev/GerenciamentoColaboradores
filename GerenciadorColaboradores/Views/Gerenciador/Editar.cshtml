@model ColaboradorModel
@{
    ViewData["title"] = "Editar Colaborador";
}

<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center">
        <h1 class="text-light">Edição de Colaboradores</h1>
    </div>

    <form method="post" asp-controller="Gerenciador" asp-action="Editar">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-light bg-dark border-light" asp-for="Nome" id="Nome">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="Matricula" class="form-label text-light">Matrícula</label>
            <input type="number" class="form-control text-light bg-dark border-light" asp-for="Matricula" id="Matricula">
            <span class="text-danger" asp-validation-for="Matricula"></span>
        </div>

        <div class="mb-3">
            <label for="Cargo" class="form-label text-light">Cargo</label>
            <input type="text" class="form-control text-light bg-dark border-light" asp-for="Cargo" id="Cargo">
            <span class="text-danger" asp-validation-for="Cargo"></span>
        </div>

        <div class="mb-3">
            <label for="Salario" class="form-label text-light">Salário</label>
            <input type="number" class="form-control text-light bg-dark border-light" asp-for="Salario" id="Salario">
            <span class="text-danger" asp-validation-for="Salario"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-warning w-50">Salvar</button>
            <a class="btn btn-primary w-50" asp-controller="Gerenciador" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>