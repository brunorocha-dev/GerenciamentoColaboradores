@model ColaboradorModel
@{
    ViewData["title"] = "Excluir Colaboradores";
}

<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center"> 
        <h1 class="text-light">Exclusão de Registros</h1>
    </div>
    
    <form method="post" asp-controller="Gerenciador" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />

        <h2 class="text-warning">Você tem certeza que deseja excluir o registro abaixo?</h2> 

        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-light text-light bg-dark border-light" asp-for="Nome" id="Nome" disabled>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="Matricula" class="form-label text-light">Matrícula</label>
            <input type="number" class="form-control text-light text-light bg-dark border-light" asp-for="Matricula" id="Matricula" disabled>
            <span class="text-danger" asp-validation-for="Matricula"></span>
        </div>

        <div class="mb-3">
            <label for="Cargo" class="form-label text-light">Cargo</label>
            <input type="text" class="form-control text-light text-light bg-dark border-light" asp-for="Cargo" id="Cargo" disabled>
            <span class="text-danger" asp-validation-for="Cargo"></span>
        </div>

        <div class="mb-3">
            <label for="Salario" class="form-label text-light">Salário</label>
            <input type="number" class="form-control text-light text-light bg-dark border-light" asp-for="Salario" id="Salario" disabled>
            <span class="text-danger" asp-validation-for="Salario"></span>
        </div>

        <div class="mb-3">
            <label for="RegistroEntrada" class="rotulo text-light">Registro de Entrada</label>
            <input type="datetime-local" class="form-control text-light bg-dark border-light" asp-for="RegistroEntrada" id="RegistroEntrada" disabled>
            <span class="text-danger" asp-validation-for="RegistroEntrada"></span>
        </div>

        <div class="mb-3">
            <label for="RegistroSaida" class="rotulo text-light">Registro de Saída</label>
            <input type="datetime-local" class="form-control text-light bg-dark border-light" asp-for="RegistroSaida" id="RegistroSaida" disabled>
            <span class="text-danger" asp-validation-for="RegistroSaida"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Gerenciador" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>