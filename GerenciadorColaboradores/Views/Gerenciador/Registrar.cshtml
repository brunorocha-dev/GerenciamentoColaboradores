@model ColaboradorModel
@{
    ViewData["title"] = "Registrar Colaborador";
}

<div class="container bg-dark p-5 rounded-3">
    
    <div class="mb-5 text-center">
        <h1 class="text-light">Registro de Ponto</h1>
    </div>

<form method="post" asp-controller="Gerenciador" asp-action="Registrar">
    <div class="mb-3">
        <label for="Nome" class="form-label text-light">Nome</label>
        <input type="text" class="form-control text-dark bg-light border-dark" asp-for="Nome" id="Nome" placeholder="Matheus Gonçalves">
        <span class="text-danger" asp-validation-for="Nome"></span>
    </div>

    <div class="mb-3">
        <label for="Matricula" class="form-label text-light">Matrícula</label>
        <input type="number" class="form-control text-dark bg-light border-light" asp-for="Matricula" id="Matricula" placeholder="2105">
        <span class="text-danger" asp-validation-for="Matricula"></span>
    </div>

    <div class="mb-3">
        <label for="Cargo" class="form-label text-light">Cargo</label>
        <input type="text" class="form-control text-dark bg-light border-dark" asp-for="Cargo" id="Cargo" placeholder="Auxiliar Administrativo">
        <span class="text-danger" asp-validation-for="Cargo"></span>
    </div>

    <div class="mb-3">
        <label for="Salario" class="form-label text-light">Salário</label>
        <input type="number" class="form-control text-dark bg-light border-light" asp-for="Salario" id="Salario" placeholder="1800">
        <span class="text-danger" asp-validation-for="Salario"></span>
    </div>

    <div class="row align-items-center">
        <div class="col-md-6">
            <label for="RegistroEntrada" class="rotulo text-light">Registro de Entrada: </label>
            <input type="datetime-local" class="text-dark bg-light border-light" asp-for="RegistroEntrada" id="RegistroEntrada">
            <span class="text-danger" asp-validation-for="RegistroEntrada"></span>
        </div>

        <div class="col-md-6">
            <label for="RegistroSaida" class="form-label text-light">Registro de Saída: </label>
            <input type="datetime-local" class="text-dark bg-light border-light" asp-for="RegistroSaida" id="RegistroSaida">
            <span class="text-danger" asp-validation-for="RegistroSaida"></span>
        </div>
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">Registrar</button>
            <a class="btn btn-primary w-50" asp-controller="Gerenciador" asp-action="Index">Voltar</a>
    </div>

</form>
</div>