@model IEnumerable<ColaboradorModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Gerenciamento de Colaboradores</h1>
        
        <div>
            <a class="btn btn-success mx-2" asp-controller="Gerenciador" asp-action="Exportar"><i class="bi bi-file-earmark-plus mx-1"></i>Baixar Relatório</a>
            <a class="btn btn-success mx-2" asp-controller="Gerenciador" asp-action="Registrar"><i class="bi bi-file-earmark-plus mx-1"></i>Registrar Ponto</a>
        </div>

    </div>
    
    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

<table class="table table-light table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Matrícula</th>
            <th scope="col">Cargo</th>
            <th scope="col">Salário</th>
            <th scope="col">Registro de Entrada</th>
            <th scope="col">Registro de Saída</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @if(Model != null)
        {
            @foreach(var gerenciar in Model)
            {
                <tr>
                    <th scope="row">@gerenciar.Nome</th>
                    <td>@gerenciar.Matricula</td>
                    <td>@gerenciar.Cargo</td>
                    <td>@gerenciar.Salario</td>
                    <td>@gerenciar.RegistroEntrada</td>
                    <td>@gerenciar.RegistroSaida</td>
                    <td> 
                                    <a asp-controller="Gerenciador" asp-action="Editar" asp-route-id="@gerenciar.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-1"></i>Editar</a>
                            <a asp-controller="Gerenciador" asp-action="Excluir" asp-route-id="@gerenciar.Id" class="btn btn-danger mx-2"><i class="bi bi-trash mx-1"></i>Excluir</a>
                    </td>
                </tr> 
            }
        }
    </tbody>
</table>
</div>